<div class="container">
  <h1>Movie Lists</h1>

  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @lists.each do |list| %>
      <div class="col">
        <div class="card text-center mb-3" style="width: 18rem;">
          <div class="card-body mt-4">
            <h5 class="card-title"><%= link_to list.name, list_path(list) %></h5>
          </div>
          <div class="card-actions text-end">
            <%= link_to list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?"}, style: "color: red" do %>
              <i class="fa-solid fa-xmark px-2"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
