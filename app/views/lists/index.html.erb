<div class="banner", style="background-image: url('https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80')">
  <h1 class="heading">Movie Lists</h1>
</div>

<div class="container mt-5">
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @lists.each do |list| %>
      <div class="col">
        <div class="card list-card text-center mb-3" style="background-image: url(<%= list.image_url %>); width: 18rem;">
          <div class="card-body mt-4">
            <h5><%= link_to list.name, list_path(list), class: "list-card-title" %></h5>
          </div>
          <div class="card-actions text-end">
            <%= link_to list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?"}, style: "color: red" do %>
              <i class="fa-solid fa-xmark px-2"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
